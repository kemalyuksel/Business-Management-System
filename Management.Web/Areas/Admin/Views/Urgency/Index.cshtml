@model List<UrgencyListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count > 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-outline-success btn-sm my-2"><i class="fas fa-plus-circle mr-2"></i>Aciliyet Ekle</a>

    <table class="table table-hover table-bordered mt-2 table-sm">
        <thead>
            <tr>
                <th>Tanim</th>
                <th width="8%">İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">Güncelle<i class="fas fa-edit ml-2"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="text-center mt-4 text-danger">
        <p class="lead">  Kayıtlı aciliyet bulunmamaktadır.</p>
        <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-info btn-sm my-2">Aciliyet Ekle</a>
    </div>
}